@model Publicacao
@{
    ViewData["Title"] = "Logado";
}
    <form  method="POST" action='@Url.Action("Cadastrar")' enctype="multipart/form-data">
        
        <label>Descricao</label>
        <input type="text" name="Legenda" required/>

        <label>Foto</label>
        <input type="file" name="Imagem" required/>

        <label>Data</label>
        <input name="Data" type="date" required/>

        <button  type="submit"> Arquivar </button>

    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <th>Descricao</th>
            <th>Data</th>
            <th>Imagem</th>
            <th>Ação</th>
        </thead>
        <tbody>
            @foreach (Publicacao publicacao in ViewBag.Publicacoes)
            {
                <tr>
                    <td>@publicacao.Legenda</td>
                    <td>@publicacao.Data</td>
                    <td><img src="wwwroot/img/Publicacao/@publicacao.Imagem" alt="Imagem da publicacao @publicacao.Legenda" width="60"></td>
                    <td><a asp-area="Link para excluir uma publicacao" asp-controller="Publicacao"asp-action="Excluir" asp-route-id="@publicacao.IdPublicacao"><i class="fas fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
</table>
